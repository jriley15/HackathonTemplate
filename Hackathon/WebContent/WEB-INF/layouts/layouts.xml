<tiles-definitions>
	<!-- THIS DEFINES THE TEMPLATE FILE WE USE WHEN LOGGED OUT-->
    <definition name="DefaultTemplate" template="/WEB-INF/layouts/template/defaultTemplate.jsp">
		<put-attribute name="title" value="Home" />
		
		<!--  THIS DEFINES WHAT FILE THE HEADER IS -->
		<put-attribute name="header" value="/WEB-INF/layouts/template/header.jsp" />
		<put-attribute name="body" value="" />
		
		<!--  THIS DEFINES WHAT FILE THE FOOTER IS -->
		<put-attribute name="footer" value="/WEB-INF/layouts/template/footer.jsp" />
	</definition>
	
	
	<!-- THIS DEFINES THE TEMPLATE FILE WE USE WHEN LOGGED IN -->
    <definition name="LoggedInTemplate" template="/WEB-INF/layouts/template/loggedInTemplate.jsp">
		<put-attribute name="title" value="Home" />
		
		<!--  THIS DEFINES WHAT FILE THE SECURE HEADER IS -->
		<put-attribute name="secureHeader" value="/WEB-INF/layouts/template/secureHeader.jsp" />
		<put-attribute name="body" value="" />
		
		<!--  THIS DEFINES WHAT FILE THE SECURE FOOTER IS -->
		<put-attribute name="secureFooter" value="/WEB-INF/layouts/template/secureFooter.jsp" />
	</definition>
</tiles-definitions>
